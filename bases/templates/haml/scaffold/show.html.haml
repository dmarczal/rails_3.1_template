- title model
%p<% attributes.each do |attribute| %>
  = attr(:<%= attribute.name %>, :end => ":")
  = @<%= singular_table_name %>.<%= attribute.name %><% end %>

%p
  = link_to t(:edit), edit_<%= singular_table_name %>_path(@<%= singular_table_name %>)
  |
  = link_to t(:back), <%= plural_table_name %>_path
  |
  = link_to t(:destroy), @<%= singular_table_name %>, confirm: t(:confirm), method: :delete
